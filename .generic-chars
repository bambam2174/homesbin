#!/bin/zsh

CMD="${0##*/}"
VARNAME="$(echo ${CMD/chars-/} | uppercase)"
CMD2EVAL="echo \$${VARNAME}"
CHARS="$(eval ${CMD2EVAL})"

OPTS=()
TMPINPUT="${1}"

[[ ${#} -gt 0 ]] && startsWithDash ${TMPINPUT} && [[ ${TMPINPUT[2]} = 'c' ]] && echo ${#CHARS} && . rts 0
[[ ${#} -gt 0 ]] && startsWithDash ${TMPINPUT} && [[ ${TMPINPUT[2]} =~ '[^0-9]' ]] && OPTS+="${1}" && shift

_chars () {
	[[ ${#} -eq 0 ]] && { echo ${OPTS} ${CHARS}; . rts 0 }
    for IDX in ${@}
    do
	    isNumeric ${IDX} && [[ ${IDX} -le ${#CHARS} ]] && echo ${OPTS} ${CHARS[${IDX}]} || echo ${OPTS} ${IDX}
    done
}
_chars ${@}
