#!/bin/zsh
OPTS=()
TMPINPUT="${1}"

[[ ${#} -gt 0 ]] && startsWithDash ${TMPINPUT} && [[ ${TMPINPUT[2]} = 'c' ]] && echo ${#ARROWS} && . rts 0
[[ ${#} -gt 0 ]] && startsWithDash ${TMPINPUT} && [[ ${TMPINPUT[2]} =~ '[^0-9]' ]] && OPTS+="${1}" && shift

_char-arrow () {
	[[ ${#} -eq 0 ]] && { echo ${OPTS} ${ARROWS}; . rts 0 }
    for IDX in ${@}
    do
	    isNumeric ${IDX} && [[ ${IDX} -le ${#ARROWS} ]] && echo ${OPTS} ${ARROWS[${IDX}]} || echo ${OPTS} ${IDX}
    done
}
_char-arrow ${@}
