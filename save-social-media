#!/bin/zsh

_save-social-media  () {
    IFS=${DELIMITER_ENDL}
    PATHS=($(path-latest-screenshot ${2}))
    CC=1
    for p in ${PATHS}
    do
        DESTINATION_FILE="${1}.png"
        [[ $#PATHS -gt 1 ]] && DESTINATION_FILE="${1}_${CC}.png"
        mv "${p}" "${PICTURES_SOCIAL-MEDIA}/${DESTINATION_FILE}"
        ((CC++))
    done
}
_save-social-media  ${@}
