#!/bin/zsh


_ps-script () {
	shlvl
	echo "			#############################################################"
	echo "		##################################    ps -ef    #################################"
	echo "	################################################################################################"
	ps -ef | head -n 1
	ps -ef | grep --color=auto --color=auto -E "${1:-${0}}"
	echo "			#############################Ã¤#############################"
	echo "		#################################   ps  av   ###################################"
	echo "	################################################################################################"
	ps av | head -n 1
	ps av | grep --color=auto --color=auto -E "${1:-${0}}"
	echo -n "#####################################################"
	echo "#####################################################"
}
_ps-script ${@}
