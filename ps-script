#!/bin/zsh


_ps-script () {
	ecko "		        #############################################################                       " 118 88
	ecko "                ##################################    ps -ef    #################################           " 118 88
	ecko "	################################################################################################    " 118 88
	ps -ef | head -n 1
	ps -ef | grep --color=auto --color=auto -E "${1:-${0}}"
	ecko "		        #############################################################                       " 118 88
	ecko "                ##################################    ps av     #################################           " 118 88
	ecko "	################################################################################################    " 118 88
	ps av | head -n 1
	ps av | grep --color=auto --color=auto -E "${1:-${0}}"
	ecko "   ######################################################################################################   " 118 88
}
_ps-script ${@}
